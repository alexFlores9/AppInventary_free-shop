<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/table"
    tools:context=".Login">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:background="@drawable/degstyle1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="::Free Shop::"
                android:textColor="#000"
                android:textSize="55sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btn_prueba"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:background="#000000FF"
                  android:layout_gravity="end"
                    android:text="crear cuenta"
                    android:textStyle="bold" />

            </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:src="@drawable/freeshop" />



            <EditText
                android:id="@+id/tv_usu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:gravity="center"
                android:hint="Escriba su usuario"


                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="5"
                android:paddingLeft="25dp"
                android:drawableStart="@drawable/ic_user"
                android:drawablePadding="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_user"/>



            <EditText
                android:id="@+id/tv_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#000"
                android:inputType="textPassword"
                android:gravity="center"
                android:hint="Escriba su contraseÃ±a"

                android:shadowDx="-8"
                android:shadowDy="-9"
                android:shadowRadius="5"
                android:paddingLeft="25dp"
                android:drawableStart="@drawable/ic_pass"
                android:drawablePadding="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:drawableLeft="@drawable/ic_pass"/>


            <Button
                android:layout_marginTop="35dp"
                android:id="@+id/btn_val"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:text="ingresar"

           />




        </LinearLayout>




</LinearLayout>