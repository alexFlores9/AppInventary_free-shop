<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/table"
    tools:context=".tb_producto">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="15dp"
            android:background="@drawable/degstyle1"
            tools:ignore="MissingConstraints">

            <TextView
                android:layout_marginTop="15dp"
                android:textSize="22sp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nuevo producto"
                />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:src="@drawable/freeshop"/>
            <LinearLayout
                android:layout_marginTop="29dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ID:"
                    />
                <EditText
                    android:id="@+id/ed_id_producto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    />
            </LinearLayout>
<LinearLayout
    android:layout_marginTop="29dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <TextView
        android:layout_marginTop="15dp"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="Nombre Producto:"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        />
    <EditText
        android:id="@+id/ed_nombre_producto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:inputType="text"
        />
</LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="DescripciÃ³n:"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    />
                <EditText
                    android:id="@+id/ed_descripcion_producto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    />
            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Stock:"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    />

                <EditText
                    android:id="@+id/ed_stock_producto"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:inputType="number"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Precio:"
                    />
                <EditText
                    android:id="@+id/ed_precio_producto"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Unidade de medida:"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    />
                <EditText
                    android:id="@+id/ed_unidad_de_medida"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Estado:"
                    android:layout_marginStart="9dp"
                    android:layout_marginLeft="9dp"
                    />

                <EditText
                    android:id="@+id/ed_estado_producto"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:inputType="number"/>

                <TextView
                    android:layout_marginTop="15dp"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Categoria:"
                    />
                <EditText
                    android:id="@+id/ed_categoria_producto"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    />

            </LinearLayout>
            <Button
                android:id="@+id/btn_guardar_producto"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:background="@drawable/btn"
                android:onClick="campoproducto"
                android:text="Guardar"
                />

            <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center"
                android:backgroundTintMode="multiply"
                app:menu_buttonToggleAnimation="@anim/fab_slide_in_from_left"
                app:srcCompat="@android:drawable/ic_menu_revert"
                >

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/item11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:backgroundTintMode="multiply"
                    android:src="@drawable/ic_acerca"
                    app:borderWidth="0dp"
                    app:fab_label="Borrar"
                    app:fab_size="normal" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/item12"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:backgroundTintMode="multiply"
                    android:src="@drawable/ic_close"

                    app:borderWidth="4dp"
                    app:fab_label="Editar"
                    app:fab_size="mini" />

                <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/item13"
android:onClick="xdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#fff"
                    android:backgroundTintMode="multiply"
                    android:src="@drawable/ic_cerrar"

                    app:borderWidth="4dp"
                    app:fab_label="Buscar"
                    app:fab_size="mini" />


            </com.github.clans.fab.FloatingActionMenu>
            <TextView
                android:layout_marginTop="100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="     "/>



        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>